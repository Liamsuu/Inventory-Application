<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Paradise</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
  </head>
  <body>
    <a href="/item/add-item">Add new product</a>
    <form
      action="/category-choice"
      method="post"
      style="display: flex; gap: 0.5rem; margin-bottom: 2rem; margin-top: 1rem"
    >
      <label for="category">Choose a category:</label>
      <select id="category" name="category">
        <option value="mobile">Mobiles</option>
        <option value="tablet">Tablets</option>
        <option value="laptop">Laptops</option>
        <option value="tv">Televisions</option>
      </select>
      <input type="submit" />
    </form>
    <% if(locals.listings != undefined){ %> <% for (let i = 0; i <
    locals.listings.length; i++) { %>
    <div class="productListings">
      <ul
        style="
          margin: 0;
          list-style: none;
          display: flex;
          gap: 5rem;
          color: #1e1b4b;
        "
      >
        <li>Product ID: <%= locals.listings[i].id %></li>
        <li>Product Name: <%= locals.listings[i].prodname %></li>
        <li>Category: <%= locals.listings[i].category %></li>
        <li>Brand: <%= locals.listings[i].brand%></li>
        <li>Quantity: <%= locals.listings[i].quantity %></li>
        <form action="/delete-product" method="post">
          <input
            type="number"
            value="<%= locals.listings[i].id %>"
            name="prodId"
            hidden
          />
          <button type="submit">Delete</button>
        </form>
      </ul>
    </div>
    <% } %> <% } %>
  </body>
</html>
